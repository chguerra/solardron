<div class="container">
	 <ul class="collection">
	 	<% @solarplants.each do |solarplant| %>
			 	<div class="card">
		            <div class="card-image-main">
		              <img src="/solarplants/<%=solarplant.id%>.png">
		              <span class="card-title"><%= link_to(solarplant.name, solarplant_path(solarplant)) %></span>
		            </div>
		            <div class="card-content">
		              <p></p>
		            </div>
		            <div class="card-action">
		              <a href="#">Editar</a>
		              <a href="#">Eliminar</a>
		        </div>
          </div>
	 	<% end %>
	 </ul>	
</div>